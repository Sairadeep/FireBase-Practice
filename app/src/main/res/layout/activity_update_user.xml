<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutforAddUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@drawable/second"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UpdateUser">

    <ImageView
        android:id="@+id/imageViewDPupdate"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/account_box_24" />

    <TextView
        android:id="@+id/textViewImagelabelUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="To update a profile pic, click on the icon" />

    <EditText
        android:id="@+id/editTextUpdateUserName"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittextUpdateEmail"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextUpdateAge"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonUpdateUser"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:layout_marginTop="15dp"
        android:text="Update User"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progressBarImageUpdate"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
</LinearLayout>