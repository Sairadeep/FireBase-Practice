<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutforAddUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@drawable/second"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".AddUser">

    <ImageView
        android:id="@+id/imageViewDP"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/account_box_24" />

    <TextView
        android:id="@+id/textViewImagelabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="To add a profile pic, click on the icon" />

    <EditText
        android:id="@+id/editTextAddUserName"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="Please enter your name"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittextAddEmail"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="Please enter your email address"
        android:inputType="textEmailAddress"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextAddAge"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="Please enter your age"
        android:inputType="number"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonAddUser"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:layout_marginTop="15dp"
        android:text="Add User"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progressBarImageUpload"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible" />
</LinearLayout>